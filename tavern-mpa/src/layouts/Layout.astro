const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
var base = Astro.request.url.split("/");
var baseUrl = base[0]+"//"+base[2];
var lang = base[3];
---
<script>
    var lang = localStorage.getItem("lang");
    var location = window.location.href;
    if(!lang){
        localStorage.setItem("lang","el");
        lang = "el";
    }
    function setLang(){
        document
    .getElementById("dropdownMenuButton1").innerHTML = lang === "el" ? "🇬🇷" : "🇬🇧";
    }

    setLang();

    document.getElementById("dropdownEl")
    .addEventListener('click',() => {window.location.href=location.replace("/en","/el");localStorage.setItem("lang","el");});

    document.getElementById("dropdownEn")
    .addEventListener('click',() => {window.location.href=location.replace("/el","/en");localStorage.setItem("lang","en");});
</script>
